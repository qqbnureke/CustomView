<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmojiView">
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="0" />
            <enum name="sad" value="1" />
            <enum name="neutral" value="2" />
            <enum name="shocked" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CardView">
        <attr name="headerColor" format="color"/>
        <attr name="headerTextColor" format="color"/>
        <attr name="descriptionTextColor" format="color" />
        <attr name="buttonTextColor" format="color"/>
        <attr name="cardBackgroundColor" format="color" />
        <attr name="dividerColor" format="color"/>
        <attr name="headerTextSize" format="dimension"/>
        <attr name="descriptionTextSize" format="dimension"/>
        <attr name="dividerWidth" format="dimension"/>
    </declare-styleable>
</resources>